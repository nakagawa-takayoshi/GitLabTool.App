<Window x:Class="GitLabTool.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitLabTool.App"
        mc:Ignorable="d"
        Title="GitLabTool" Height="230" Width="450"
        Topmost="True"
        Background="#222222"
        Loaded="MainWindow_OnLoaded" Icon="pack://application:,,,/GitLabTool.App;component/Icons/Gitlab.png">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"
                      CornerRadius="6"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GitLabTool.App;component/Styles/CloseButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GitLabTool.App;component/Styles/MinimizeButtonStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/GitLabTool.App;component/Styles/RestoreButtonStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border x:Name="PanelBorder" x:FieldModifier="private" BorderThickness="2" BorderBrush="#555555" CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border x:Name="IconBackgroundBorder" x:FieldModifier="private" Grid.Column="0" Background="DarkOliveGreen" Opacity="1" CornerRadius="4" Visibility="Hidden" />
                <Image x:Name="AppIconImage" x:FieldModifier="private" Grid.Column="0" Source="pack://application:,,,/GitLabTool.App;component/Icons/Gitlab.png" Width="16" Height="16" Margin="6" />
                <TextBlock x:Name="TitleTextBlock" x:FieldModifier="private" Grid.Column="1" Text="GitLabTool" VerticalAlignment="Center" Margin="5,0"  />
                <Button x:Name="MinimizeButton" x:FieldModifier="private" Grid.Column="2" Width="32" Height="32" Margin="2" 
                        WindowChrome.IsHitTestVisibleInChrome="True" Style="{StaticResource MinimizeButtonStyle}" 
                        Click="MinimizeButton_OnClick">
                    <Button.Content>
                        <Image Source="pack://application:,,,/GitLabTool.App;component/Icons/Minimize_n.png" Width="24" Height="24"  />
                    </Button.Content>
                </Button>
                <Button x:Name="RestoreButton" x:FieldModifier="private" Grid.Column="3" Width="32" Height="32" Margin="2" 
                        WindowChrome.IsHitTestVisibleInChrome="True" Style="{StaticResource RestoreButtonStyle}" Visibility="Collapsed"
                        Click="RestoreButton_OnClick">
                    <Button.Content>
                        <Image Source="pack://application:,,,/GitLabTool.App;component/Icons/Restore_n.png" Width="24" Height="24"  />
                    </Button.Content>
                </Button>
                <Button x:Name="CloseButton" x:FieldModifier="private" Grid.Column="4" Width="32" Height="32" Padding="0" Margin="2" WindowChrome.IsHitTestVisibleInChrome="True"
                        Style="{StaticResource CloseButtonStyle}" Click="CloseButton_OnClick">
                    <Button.Content>
                        <Image Source="pack://application:,,,/GitLabTool.App;component/Icons/Close_n.png" Width="24" Height="24"  />
                    </Button.Content>
                </Button>
            </Grid>
            <TabControl x:Name="GitTabControl" x:FieldModifier="private" Grid.Row="1">
                <TabItem Header="コミットメッセージ" FontSize="14" IsSelected="True" >
                    <Grid Background="#222222">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <ComboBox x:Name="KeywordComboBox" x:FieldModifier="private" Grid.Row="0" Grid.Column="0" SelectionChanged="KeywordComboBox_OnSelectionChanged">
                            <ComboBoxItem Content="Task" />
                            <ComboBoxItem Content="LowRisk" />
                            <ComboBoxItem Content="ReSharper" />
                            <ComboBoxItem Content="ConflictMerge" />
                        </ComboBox>
                        <TextBox x:Name="CommitMessageTextBox" x:FieldModifier="private"  Grid.Row="0" Grid.Column="1" AcceptsReturn="True"  Margin="5" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="定型文" VerticalAlignment="Center" Margin="5" />
                        <ComboBox x:Name="FixTextComboBox" x:FieldModifier="private" Grid.Row="1" Grid.Column="1" Margin="5" SelectionChanged="FixTextComboBox_OnSelectionChanged" />
                    </Grid>
                </TabItem>
                <TabItem Header="ブランチ名" FontSize="14">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="BranchNamePrefixTextBlock" x:FieldModifier="private" Grid.Column="0" Margin="5" />
                        <TextBox x:Name="BranchNameTextBox" x:FieldModifier="private" Grid.Column="1" Margin="5" AcceptsReturn="False" />
                    </Grid>
                </TabItem>
            </TabControl>
            <DockPanel Grid.Row="2" Grid.Column="0"  Background="#111111" HorizontalAlignment="Stretch" >
                <Button DockPanel.Dock="Right" Width="120" Height="32" Content="コピー" Margin="5" HorizontalAlignment="Right" Background="DodgerBlue" Click="CopyButton_OnClick" />
            </DockPanel>
        </Grid>
    </Border>

</Window>